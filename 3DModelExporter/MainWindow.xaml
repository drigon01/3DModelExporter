<Window x:Class="_3DModelExporter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_3DModelExporter"
        xmlns:ht="clr-namespace:HelixToolkit.Wpf;assembly=HelixToolkit.Wpf"
        mc:Ignorable="d"
        Title="3DModelExporter" Height="350" Width="525"
        DataContext="{StaticResource MainViewModel}">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*"/>
      <ColumnDefinition Width="200"/>
    </Grid.ColumnDefinitions>

    <ht:HelixViewport3D Grid.Column="0" x:Name="mViewPort" Camera="{ht:PerspectiveCamera 5.3,-12.3,3.3,-6.3,11,-6.6}">
      <ht:SunLight/>
      <ht:FileModelVisual3D x:Name="m3DMdoel" Source="{Binding ModelPath}"/>
    </ht:HelixViewport3D>

    <StackPanel Background="DarkGray" Grid.Column="1">

      <StackPanel Orientation="Horizontal" Width="Auto">
        <Label Content="Browse for Model"/>
        <Button Content="Click Me" Click="OnClick"/>
      </StackPanel>
      <Separator/>
      <StackPanel>
        <StackPanel Orientation="Horizontal" Width="Auto">
          <Label Content="Number of details:"/>
          <TextBlock Text="{Binding NumberOfDetails}"/>
        </StackPanel>
        <Slider Minimum="0" Maximum="100" Value="{Binding NumberOfDetails}"/>
      </StackPanel>
      <Separator/>
      <Label Content="Perspectives:"/>
      <Button Content="Top" Command="PerspectiveSelected" CommandParameter="Top"/>
      <Button Content="Side" Command="PerspectiveSelected" CommandParameter="Side"/>
      <Button Content="Front" Command="PerspectiveSelected" CommandParameter="Front"/>
      <Separator/>
      <Button Content="Export View" Command="Export"/>
      <Separator/>
    </StackPanel>
  </Grid>
</Window>
